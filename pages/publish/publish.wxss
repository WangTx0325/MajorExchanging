@import '../../component/dist/iconfont/iconfont.wxss';

.edit-header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 0 30rpx;
    height: 30pt;
    font-size: 12pt;
}
/* .header-exit{
  color :gray;
} */
.header-delive {
    color: #a1cdea;
}
.edit-main {
  height: 500rpx;
  margin: 20rpx;
  padding: 20rpx;
  border: 2rpx;
}

.edit-text {
    /* min-height: 100rpx; */
    height: 180rpx;
    overflow-y: scroll;
    font-size: 13pt;
    line-height: 20pt;
    color: #353535;
}
.edit-img {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-content: space-between;
}
.edit-img  image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 10rpx 10rpx 0;
}
.icon-plus {
    width: 200rpx;
    height: 200rpx;
    background-color: rgba(87,107,149,0.1);
    font-size: 40pt;
    color: #888;
    line-height: 200rpx;
    text-align: center;
}

